  </div>
</div>

<div id="container">
  <h3>Recent Articles</h3>
    <% blog.articles[0...10].each do |article, i| %>
      <li><b><%= link_to article.title, article, :class => 'link' %></b> <span><%= article.date.strftime('%e %b %Y') %></span></li>
    <% end %>
</div>

<div id="container">
  <div align="left">
      <a href="#!" id="buy" class="button">Checkout Now</a>
  </div>
</div>

<script src="https://cdn.paddle.com/paddle/paddle.js"></script>
<script type="text/javascript">
  Paddle.Setup({ vendor: 109574 });
</script>

<script type="text/javascript">
	function openCheckout() {
		Paddle.Checkout.open({
      product: 585890,
      title: "Full-stack Growth Hacking",
      custom_message: "Thank you for choosing us!",
      image_url: "https://raw.githubusercontent.com/evtan/evtan.github.io/source/data/letter-e.png"
      });
	}
	document.getElementById('buy').addEventListener('click', openCheckout, false);
</script>

